<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.work.transportapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- android:theme="@style/Theme.AppCompat.Light.NoActionBar" -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoadActivity"
            android:screenOrientation="landscape"> <!-- 设置屏幕横向 -->
        </activity>

        <service android:name=".location.LocationSvc" />

        <activity
            android:name=".HistogramActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".PieActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".VolleyTestActivity" />
        <activity
            android:name=".LineActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".QRCodeActivity"></activity>
    </application>

</manifest>